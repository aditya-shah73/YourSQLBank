<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="controller.AdminWindowController"
      xmlns:fx="http://javafx.com/fxml">
    <!-- path of the file that has controller logic for this fxml goes in the fx:controller="path" in above tag.-->

    <Text fx:id="title"
          text="YourSQL Bank"/>

    <Text styleClass="userinfo"
          text="Hello,  "/>

    <GridPane fx:id="transactiontable">
        <TextField  styleClass="columnheader"
                    text="username"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"/>

        <TextField  styleClass="columnheader"
                    text="Account Type"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"/>

        <TextField  styleClass="columnheader"
                    text="Balance"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2"/>

        <TextField  styleClass="columnheader"
                    text="Archive?"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="3"/>

        <TextField  styleClass="columnheader"
                    text="Close?"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="4"/>

    </GridPane>

    <Button text="Log Out"
            onAction="#logOutAdmin"
            fx:id="loginbutton"/>
</VBox>
