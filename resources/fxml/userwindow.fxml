<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="controller.UserWindowController"
      xmlns:fx="http://javafx.com/fxml">
    <!-- path of the file that has controller logic for this fxml goes in the fx:controller="path" in above tag.-->

    <Text fx:id="title"
          text="YourSQL Bank"/>
    <HBox fx:id="greeting">
        <Text styleClass="userinfo"
              text="Hello,  "/>
        <Text text="${controller.userName}"/>
    </HBox>

    <VBox>
        <HBox>
            <TextField  promptText="transactionAmount"
                        fx:id="amountDeposite"/>
            <TextField  promptText="Description"
                        fx:id="descriptionDeposite"/>
            <Button text="Deposite Checking Account"
                    onAction="#depositMoneyInChecking"/>
            <Button text="Deposite Saving Account"
                    onAction="#depositMoneyInSaving"/>
        </HBox>
        <HBox>
            <TextField  promptText="Amount"/>
            <TextField  promptText="Description"/>
            <Button text="Withdraw Checking Account"
                    onAction="#withdrawFromChecking"/>
            <Button text="Withdraw Saving Account"
                    onAction="#withdrawFromSaving"/>
        </HBox>
    </VBox>

    <HBox   fx:id="accountSelectButtons">
        <Button text="Checking Acc."
                onAction="#showCheckingAccount"/>
        <Button text="Saving Acc."
                onAction="#showSavingAccount"/>
    </HBox>

    <GridPane   fx:id="userTableHeader"
                hgap="10"
                vgap="10">
        <Text  styleClass="columnHeader"
                    text="Date"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"/>

        <Text  styleClass="columnHeader"
                    text="Transaction Description"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"/>

        <Text  styleClass="columnHeader"
                    text="Withdrawal"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2"/>

        <Text  styleClass="columnHeader"
                    text="Deposit"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="3"/>
    </GridPane>

    <GridPane   fx:id="userTableData"
                hgap="10"
                vgap="10">


    </GridPane>

    <Button text="Log Out"
            onAction="#showLogOutUserWindow"
            fx:id="logOutButton"/>
</VBox>
