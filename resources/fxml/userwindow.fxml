<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="controller.UserWindowController"
      xmlns:fx="http://javafx.com/fxml">
    <!-- path of the file that has controller logic for this fxml goes in the fx:controller="path" in above tag.-->

    <Text fx:id="title"
          text="YourSQL Bank"/>

    <Text styleClass="userinfo"
          text="Hello,  "/>

    <HBox   fx:id="transactionButtons">
        <Button text="Checking Acc."
                onAction="#showCheckingAccount"/>
        <Button text="Saving Acc."
                onAction="#showSavingAccount"/>
    </HBox>

    <GridPane fx:id="transactiontable">
        <TextField  styleClass="columnheader"
                    text="Date"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"/>

        <TextField  styleClass="columnheader"
                    text="Transaction Description"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"/>

        <TextField  styleClass="columnheader"
                    text="Withdrawal"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2"/>

        <TextField  styleClass="columnheader"
                    text="Deposit"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="3"/>
    </GridPane>

    <Button text="Log Out"
            onAction="#logOutUser"
            fx:id="loginbutton"/>
</VBox>
