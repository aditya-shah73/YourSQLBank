<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="controller.SignUpController"
      xmlns:fx="http://javafx.com/fxml">
    <!-- path of the file that has controller logic for this fxml goes in the fx:controller="path" in above tag.-->
    <Text fx:id="title"
          text="YourSQL Bank"/>

    <Text fx:id="welcome"
          text="Welcome!"
          textAlignment="CENTER"/>

        <Text   text="Create Account"/>

        <Label text="First Name: "/>
        <TextField  fx:id="newAccountFirstName"
                    promptText="First Name"/>
        <Label text="Last Name: "/>
        <TextField  fx:id="newAccountLastName"
                    promptText="Last Name"/>
        <Label text="Username: "/>
        <TextField  fx:id="newAccountUsername"
                    promptText="Username"/>
        <Label text="Password: "/>
        <TextField  fx:id="newAccountPassword"
                    promptText="Password"/>


    <Button text="Submit"
            onAction="#signUpAccount"
            fx:id="signupbutton"/>
</VBox>

        <!--alignment="center" hgap="10" vgap="10" attributes in gridpane that control gap between cells.-->